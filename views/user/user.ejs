<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Signup On Wanderlust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-6">
                <label for="email" class="form-label">Email: </label>
                <input name="email" type="email" class="form-control" required>
                <div class="valid-feedback">Email looks good!</div>
            </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username: </label>
                    <input name="username" type="text" class="form-control" required>
                    <div class="valid-feedback">Username looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password: </label>
                    <input name="password" type="text" class="form-control" required>
                    <div class="valid-feedback">password looks good!</div>
                </div>
            

            <button class="btn btn-success mt-3 mb-3">Signup</button>
        </form>

    </div>
</div>