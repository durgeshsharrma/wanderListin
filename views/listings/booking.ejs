<% layout('layouts/boilerplate') %>

<!-- Page Title -->
<h2 class="text-center my-4">Your Bookings</h2>

<!-- Booking List -->
<div class="container">
  <div class="row">
    <!-- ✅ Add this row wrapper -->
    <% bookings.forEach(booking => { %>
    <% if (booking.listing) { %>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card shadow-sm">
        <img src="<%= booking.listing.image %>" class="card-img-top" alt="<%= booking.listing.title %>">
        <div class="card-body p-3">
          <h5 class="card-title font-"><%= booking.listing.title %></h5>
          <p class="card-text">Payment Status: <%= booking.paymentStatus %></p>
          <p class="card-text">Booked on: <%= booking.createdAt.toLocaleDateString() %></p>
          <a href="/booking/<%= booking._id %>" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card shadow-sm bg-light">
        <div class="card-body p-3">
          <h5 class="card-title text-danger">Listing Removed</h5>
          <p class="card-text">Payment Status: <%= booking.paymentStatus %></p>
          <p class="card-text">Booked on: <%= booking.createdAt.toLocaleDateString() %></p>
          <p class="text-muted">This listing is no longer available.</p>
        </div>
      </div>
    </div>
    <% } %>
    <% }) %>
  </div> <!-- ✅ Close row -->
</div>
