<% layout('layouts/boilerplate') %>

<!-- Page Title -->
<h2 class="text-center my-4">Your Bookings</h2>

<!-- Booking List -->
<div class="container">
  <% bookings.forEach(booking => { %>
  <% if (booking.listing) { %>
  <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card shadow-sm">
      <img src="<%= booking.listing.image %>" class="card-img-top" alt="<%= booking.listing.title %>">
      <div class="card-body p-3">
        <h5 class="card-title font-"><%= booking.listing.title %></h5>
        <p class="card-text">Payment Status: <%= booking.paymentStatus %></p>
        <p class="card-text">Booked on: <%= booking.createdAt.toLocaleDateString() %></p>
        <a href="/booking/<%= booking._id %>" class="btn btn-primary">View Details</a>
      </div>
    </div>
  </div>
  <% } else { %>
  <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card shadow-sm bg-light">
      <div class="card-body p-3">
        <h5 class="card-title text-danger">Listing Removed</h5>
        <p class="card-text">Payment Status: <%= booking.paymentStatus %></p>
        <p class="card-text">Booked on: <%= booking.createdAt.toLocaleDateString() %></p>
        <p class="text-muted">This listing is no longer available.</p>
      </div>
    </div>
  </div>
  <% } %>
  <% }) %>
  
</div>

<!-- Add some custom styling -->
<style>
  /* Custom Card Styling */
  .card {
    border-radius: 10px;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .card-img-top {
    height: 200px;
    object-fit: cover;
    border-radius: 10px 10px 0 0;
  }

  /* Styling for the "View Details" button */
  .btn-primary {
    background-color: #007bff;
    border: none;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  /* Page Title */
  h2 {
    font-weight: bold;
    color: #333;
  }

  /* Additional Margin and Padding */
  .container {
    margin-top: 30px;
  }

  /* Alert Box Styling */
  .alert {
    font-size: 1.2rem;
    padding: 1.5rem;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 10px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .card {
      margin-bottom: 20px;
    }
  }
</style>
