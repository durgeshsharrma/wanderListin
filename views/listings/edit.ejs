<% layout("/layouts/boilerplate") %>

<div class="row mt-5 mb-5">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1">
    <h1 class="text-center mb-4 fw-bold text-primary">Edit Listing</h1>

    <div class="card shadow-sm p-4 rounded">
      <form method="POST" action="/listing/<%= Info._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- Title -->
        <div class="mb-4">
          <label for="title" class="form-label">Title:</label>
          <input id="title" name="title" type="text" value="<%= Info.title %>" class="form-control" required>
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please provide a title.</div>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <label for="description" class="form-label">Description:</label>
          <textarea id="description" name="description" class="form-control" rows="4" required><%= Info.description %></textarea>
          <div class="invalid-feedback">Description should be short and informative.</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
          <label for="image" class="form-label">Upload New Image:</label>
          <input id="image" name="image" type="file" class="form-control">
          <!-- Note: file inputs donâ€™t support value pre-filling for security reasons -->
        </div>

        <!-- Price and Country in one row -->
        <div class="row g-3 mb-4">
          <div class="col-12 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input id="price" name="price" type="number" value="<%= Info.price %>" class="form-control" required>
            <div class="invalid-feedback">Price should be valid.</div>
          </div>

          <div class="col-12 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input id="country" name="country" type="text" value="<%= Info.country %>" class="form-control" required>
            <div class="invalid-feedback">Country should be valid.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <label for="location" class="form-label">Location:</label>
          <input id="location" name="location" type="text" value="<%= Info.location %>" class="form-control" required>
          <div class="invalid-feedback">Location should be valid.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark w-100 py-2 mt-3 mb-3 edit-btn">Edit Listing</button>
      </form>
    </div>
  </div>
</div>

<style>
  .card {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
  }

  .btn-dark {
    border-radius: 25px;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  .btn-dark:hover {
    background-color: #343a40cc;
  }

  .form-control {
    border-radius: 25px;
    padding: 10px 15px;
  }

  .form-label {
    font-weight: 600;
  }

  .invalid-feedback {
    font-size: 0.875rem;
    color: #dc3545;
  }

  .valid-feedback {
    font-size: 0.875rem;
    color: #28a745;
  }

  /* Responsive tweaks */
  @media (max-width: 576px) {
    .card {
      padding: 1.5rem;
    }

    .form-control {
      font-size: 1rem;
    }
  }
</style>
