<% layout("/layouts/boilerplate") %>

<div class="row mt-5 mb-5">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1">
    <h1 class="text-center mb-4 fw-bold text-primary">Create A New Listing</h1>

    <div class="card shadow-sm p-4 rounded">
      <form method="POST" action="/" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- Title Field -->
        <div class="mb-4">
          <label for="title" class="form-label">Enter Title:</label>
          <input class="form-control" name="listing[title]" placeholder="Add a catchy Title" type="text" id="title" required>
          <div class="invalid-feedback">Please provide a title.</div>
          <div class="valid-feedback">Title looks good!</div>
        </div>

        <!-- Description Field -->
        <div class="mb-4">
          <label for="description" class="form-label">Enter Description:</label>
          <textarea class="form-control" id="description" name="listing[description]" placeholder="Enter the description" rows="4" required></textarea>
          <div class="invalid-feedback">Description should be short and informative.</div>
        </div>

        <!-- Image Upload -->
        <div class="mb-4">
          <label for="image" class="form-label">Upload Image:</label>
          <input class="form-control" name="listing[image]" placeholder="Upload an image" type="file" required>
          <div class="invalid-feedback">Please upload an image.</div>
        </div>

        <!-- Price and Country Fields in one row -->
        <div class="row g-3 mb-3">
          <div class="col-12 col-md-6">
            <label for="price" class="form-label">Price:</label>
            <input name="listing[price]" placeholder="Enter the price" type="number" class="form-control" required>
            <div class="invalid-feedback">Price should be valid.</div>
          </div>

          <div class="col-12 col-md-6">
            <label for="country" class="form-label">Country:</label>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
            <div class="invalid-feedback">Country should be valid.</div>
          </div>
        </div>

        <!-- Location Field -->
        <div class="mb-4">
          <label for="location" class="form-label">Location:</label>
          <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
          <div class="invalid-feedback">Location should be valid.</div>
        </div>

        <!-- Pets Allowed Field -->
        <div class="mb-4 form-check">
          <input type="checkbox" class="form-check-input" name="listing[petsAllowed]" id="petsAllowed" value="true">
          <label class="form-check-label" for="petsAllowed">Yes, pets are allowed</label>
        </div>

        <!-- Submit Button -->
        <button class="btn btn-success w-100 py-2 mt-3 mb-3">Add Listing</button>
      </form>
    </div>
  </div>
</div>

<style>
  .card {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
  }

  .btn-success {
    border-radius: 25px;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  .btn-success:hover {
    background-color: #218838;
    border-color: #1e7e34;
  }

  .form-control {
    border-radius: 25px;
    padding: 10px 15px;
  }

  .form-label {
    font-weight: 600;
  }

  .invalid-feedback {
    font-size: 0.875rem;
    color: #dc3545;
  }

  .valid-feedback {
    font-size: 0.875rem;
    color: #28a745;
  }

  .form-check-input {
    border-radius: 50%;
  }

  /* Responsive tweaks */
  @media (max-width: 576px) {
    .card {
      padding: 1.5rem;
    }

    .form-control {
      font-size: 1rem;
    }
  }
</style>
