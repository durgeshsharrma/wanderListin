<% layout('layouts/boilerplate') %>


<div class="row">
  
      
      <div class="col-8 mt-3 mb-4 offset-2">
        <h2>Booking Details</h2>
       
          <div class="card">
            <img src="<%= booking.listing.image %>" class="card-img-top show-img" style="height: 20rem;" alt="<%= booking.listing.title %>">
            <div class="card-body p-4">
              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p class="card-text">Payment Status: <%= booking.paymentStatus %></p>
              <p class="card-text">Booked on: <%= booking.createdAt.toLocaleDateString() %></p>
              <p class="card-text">Total Amount: <%= booking.listing.price %> USD</p>
            </div>
          </div>
       

      </div>
    </div>
</div>
